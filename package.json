{
  "name": "mallorca-travel-backend",
  "version": "1.0.0",
  "description": "High-performance backend service for Mallorca travel offers",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --expose-gc --max-old-space-size=32768 --max-semi-space-size=512 --optimize-for-size --gc-interval=100 dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "setup": "./scripts/setup-environment.sh",
    "start:full": "./scripts/start.sh",
    "validate": "./scripts/validate-config.sh",
    "health": "./scripts/health-check.sh",
    "shutdown": "./scripts/shutdown.sh",
    "docker:build": "docker build -t mallorca-travel-backend .",
    "docker:run": "docker-compose up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "travel",
    "api",
    "backend",
    "mallorca"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "fast-csv": "^5.0.5",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/on-headers": "^1.0.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}
